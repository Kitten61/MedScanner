<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="49dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="214dp"
        android:layout_height="157dp"
        android:alpha="0.35"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/love_cat" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="396dp"
        android:layout_height="327dp"
        android:gravity="top"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_pop"
            android:layout_width="263dp"
            android:layout_height="36dp"
            android:layout_gravity="center|top"
            android:layout_marginStart="70dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="70dp"
            android:layout_marginRight="70dp"
            android:gravity="center|top"
            android:text="Популярные запросы:"
            android:textSize="19sp"
            android:textStyle="bold"
            app:fontFamily="serif" />

        <TextView
            android:id="@+id/text_pop1"
            android:layout_width="152dp"
            android:layout_height="37dp"
            android:layout_gravity="center|top"
            android:layout_marginStart="142dp"
            android:layout_marginLeft="142dp"
            android:layout_marginEnd="142dp"
            android:layout_marginRight="142dp"
            android:gravity="center|top"
            android:text="@string/pop_1"
            android:textAllCaps="false"
            android:textColor="@color/colorRaz1"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/text_pop2"
            android:layout_width="271dp"
            android:layout_height="41dp"
            android:layout_gravity="center|top"
            android:layout_marginStart="94dp"
            android:layout_marginLeft="94dp"
            android:layout_marginEnd="94dp"
            android:layout_marginRight="94dp"
            android:gravity="center|top"
            android:text="@string/pop_2"
            android:textColor="@color/colorRaz2"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/text_pop3"
            android:layout_width="358dp"
            android:layout_height="43dp"
            android:layout_gravity="center|top"
            android:layout_marginStart="52dp"
            android:layout_marginLeft="52dp"
            android:layout_marginEnd="52dp"
            android:layout_marginRight="52dp"
            android:foregroundGravity="center"
            android:gravity="center|top"
            android:text="УЗИ сосудов нижних конечностей"
            android:textColor="@color/colorRaz3"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/text_pop4"
            android:layout_width="192dp"
            android:layout_height="42dp"
            android:layout_gravity="center|top"
            android:layout_marginStart="141dp"
            android:layout_marginLeft="141dp"
            android:layout_marginEnd="141dp"
            android:layout_marginRight="141dp"
            android:gravity="center|top"
            android:text="маммография"
            android:textColor="@color/colorRaz4"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/text_pop5"
            android:layout_width="373dp"
            android:layout_height="48dp"
            android:layout_gravity="center|top"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            android:layout_marginEnd="44dp"
            android:layout_marginRight="44dp"
            android:gravity="center|top"
            android:text="компьютерная томография сустава"
            android:textColor="@color/colorRaz5"
            android:textSize="19sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>