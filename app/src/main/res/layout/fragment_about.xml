<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="294dp"
            android:layout_height="133dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:alpha="0.45"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:srcCompat="@drawable/cats" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Разработчики:"
            android:textAllCaps="false"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="361dp"
            android:layout_height="32dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="23dp"
            android:layout_marginRight="23dp"
            android:gravity="center"
            android:text="Вот они слева направо..."
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <LinearLayout
            android:id="@+id/lay"
            android:layout_width="397dp"
            android:layout_height="310dp"
            android:layout_marginTop="40dp"
            android:gravity="center|top"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView5">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="310dp"
                android:layout_height="35dp"
                android:gravity="left"
                android:text="Кадобкина Елизавета"
                android:textColor="@color/colorRaz1"
                android:textSize="22sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="310dp"
                android:layout_height="35dp"
                android:gravity="left"
                android:text="Варламова Елена"
                android:textColor="@color/colorRaz2"
                android:textSize="22sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="310dp"
                android:layout_height="35dp"
                android:gravity="left"
                android:text="Решетняк Анастасия"
                android:textColor="@color/colorRaz3"
                android:textSize="22sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="310dp"
                android:layout_height="35dp"
                android:gravity="left"
                android:text="Тритенко Артем"
                android:textColor="@color/colorRaz4"
                android:textSize="22sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="310dp"
                android:layout_height="35dp"
                android:gravity="left"
                android:text="Сеничев Леонид"
                android:textColor="@color/colorRaz5"
                android:textSize="22sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="310dp"
                android:layout_height="35dp"
                android:gravity="left"
                android:text="Ключникова Дарья"
                android:textColor="@color/colorRaz6"
                android:textSize="22sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="310dp"
                android:layout_height="35dp"
                android:gravity="left"
                android:text="Ковярова Екатерина"
                android:textColor="@color/colorRaz7"
                android:textSize="22sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="310dp"
                android:layout_height="35dp"
                android:gravity="left"
                android:text="Еремеев Михаил"
                android:textColor="@color/colorRaz8"
                android:textSize="22sp"
                android:textStyle="italic" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
