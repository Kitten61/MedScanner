<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="406dp"
        android:layout_height="484dp"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/bBl"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="45dp"
                android:layout_weight="1"
                android:clickable="true"
                app:backgroundTint="#3c5f96" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/bPu"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:clickable="true"
                app:backgroundTint="#715091" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="284dp"
            android:layout_height="103dp"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/bOr"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginRight="150dp"
                android:layout_weight="1"
                android:clickable="true"
                app:backgroundTint="#FF7F50" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/bGr"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:clickable="true"
                app:backgroundTint="#367053" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="398dp"
            android:layout_height="252dp"
            android:layout_gravity="right"
            android:layout_marginBottom="30dp"
            android:alpha="0.6"
            app:srcCompat="@drawable/think_cat" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        style="@android:style/Widget.Material.Light.TextView.SpinnerItem"
        android:layout_width="214dp"
        android:layout_height="58dp"
        android:text="Выберите тему :"
        android:textColor="#BE302C2C"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>